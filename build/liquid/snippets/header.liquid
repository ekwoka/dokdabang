<header-ui class="block bg-white" x-data="header">

  {%- unless settings.type == 'checkout' -%}
  <nav-wrapper class="fixed inset-0 z-40 flex lg:hidden" role="dialog" aria-modal="true" x-show="mobileMenuOpen" x-cloak :aria-expanded="mobileMenuOpen">

    <drawer-backdrop class="fixed inset-0 block bg-black bg-opacity-60 backdrop-saturate-100" aria-hidden="true" x-show="mobileMenuOpen" x-cloak
      x-transition:enter="transition-all ease-out duration-500"
      x-transition:enter-start="opacity-0 backdrop-saturate-0"
      x-transition:enter-end="opacity-100 backdrop-saturate-100"
      x-transition:leave="transition-all ease-in duration-300"
      x-transition:leave-start="opacity-100 backdrop-saturate-100"
      x-transition:leave-end="opacity-0 backdrop-saturate-0"></drawer-backdrop>

      {%- render 'mobile-drawer', settings: settings -%}
      
  </nav-wrapper>
    
  {%- endunless -%}
  
    <header class="relative">
      <nav aria-label="Top">

        <top-banner class="block bg-emerald-900">
          <div class="flex items-center justify-center h-10 px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
              <span class="text-base font-medium tracking-wider text-white hover:text-gray-100">Welcome to DokDaBang</a>
          </div>
        </top-banner>
  

        <div class="bg-white">
          <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
            <div class="border-b border-gray-200">
              <div class="flex items-center justify-between h-16">
                <div class="hidden lg:flex-1 lg:flex lg:items-center">
                  <a href="/">
                    <span class="sr-only">Dokdabang</span>
                    <span class="text-3xl font-medium leading-loose uppercase text-emerald-600">Dokdabang</span>
                  </a>
                </div>
  
                <div class="hidden h-full lg:flex">
                  <div class="inset-x-0 bottom-0 z-10 px-4">
                    <div class="flex justify-center h-full space-x-8" x-data="tabs" @click.away="selectedTab='none'">

                      {%- for link in settings.navigation.main -%}
                        {%- if link.flyout -%}
                          {%- render 'headernav-flyout', link: link -%}
                        {%- else -%}
                          <a href="#" class="flex items-center text-sm font-medium text-gray-700 hover:text-gray-800">{{ link.title | capitalize }}</a>
                        {%- endif -%}
                      {%- endfor -%}
                    </div>
                  </div>
                </div>

                <div class="flex items-center flex-1 lg:hidden">
                  {%- unless settings.type == 'checkout' -%}
                  <button type="button" class="p-2 -ml-2 text-gray-400 bg-white rounded-md" @click="mobileMenuOpen=true">
                    <span class="sr-only">Open menu</span>
                    <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                  </button>
                    
                  {%- endunless -%}
  
                </div>
  
                <a href="/" class="lg:hidden">
                  <span class="sr-only">Dokdabang</span>
                  <span class="text-2xl font-medium leading-loose uppercase text-emerald-600">Dokdabang</span>
                </a>
  
                <div class="flex items-center justify-end flex-1">
                  <a href="#" class="hidden text-sm font-medium text-gray-700 hover:text-gray-800 lg:hidden">
                    Search
                  </a>
  
                  <div class="flex items-center lg:ml-8">
                    {%- unless settings.type == 'checkout' -%}
                    <div class="flow-root ml-4 lg:ml-8">
                      <a href="#" class="flex items-center p-2 -m-2 group" @click.prevent="$store.cartIsOpen=true">
                        <svg class="flex-shrink-0 w-6 h-6 text-gray-400 group-hover:text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                        </svg>
                        <span class="ml-2 text-sm font-medium text-gray-700 group-hover:text-gray-800" x-text="$store.cart.quantity">0</span>
                        <span class="sr-only">items in cart, view bag</span>
                      </a>
                    </div>
                    {%- endunless -%}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>

    {%- unless settings.type == 'checkout' -%}
    {%- render 'side-cart', settings: settings -%}              
    {%- endunless -%}

  </header-ui>
  