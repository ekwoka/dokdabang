<mobile-tab id="tabs-1-panel-1" class="block px-4 py-6 space-y-12" aria-labelledby="" role="tabpanel" tabindex="0" x-show="selectedTab==='{{ link.title | replace: ' ', '-' }}'" :tabindex="selectedTab==='{{ link.title | replace: ' ', '-' }}'?0:-1">
  <tab-grid class="grid grid-cols-2 gap-x-4 gap-y-10">

    {%- for item in link.items -%}
    <grid-item class="relative block group">
      <div class="overflow-hidden bg-gray-100 rounded-md aspect-w-1 aspect-h-1 group-hover:opacity-75">
        <img src="{{ item.img }}" alt="Models sitting back to back, wearing Basic Tee in black and bone." class="object-cover object-center" />
      </div>
      <a href="#" class="block mt-6 text-sm font-medium text-gray-900">
        <span class="absolute inset-0 z-10" aria-hidden="true"></span>
        {{ item.label | capitalize}}
      </a>
      <p aria-hidden="true" class="mt-1 text-sm text-gray-500">Shop now</p>
    </grid-item>
    {%- endfor -%}
    
  </tab-grid>
</mobile-tab>
