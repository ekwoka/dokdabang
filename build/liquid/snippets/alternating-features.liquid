<div class="max-w-2xl px-4 py-12 mx-auto sm:px-6 sm:py-32 lg:max-w-7xl lg:px-8">
  <div class="max-w-3xl mx-auto text-center">
    <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">{{ features.heading }}</h2>
    <p class="mt-4 text-gray-700">{{ features.paragraph }}</p>
  </div>

  <div class="mt-16 space-y-16">
    {%- for item in features.items -%} {%- assign looptype = forloop.index | modulo: 2 -%} {%- if looptype == 0 -%} {%- assign text_class = 'lg:col-start-8 xl:col-start-9' -%} {%- assign image_ckass = 'lg:col-start-1' -%} {%- else -%} {%- assign text_class = 'lg:col-start-1' -%} {%- assign
    image_ckass = 'lg:col-start-6 xl:col-start-5' -%} {%- endif -%}

    <div class="flex flex-col-reverse lg:grid lg:grid-cols-12 lg:gap-x-8 lg:items-center">
      <div class="mt-6 lg:mt-0 lg:row-start-1 lg:col-span-5 {{ text_class }}">
        <h3 class="text-lg font-medium text-gray-900">{{ item.title }}</h3>
        <p class="mt-2 text-base text-gray-700">{{ item.content }}</p>
      </div>
      <div class="flex-auto lg:row-start-1 lg:col-span-7 xl:col-span-8 {{ image_class }}">
        <div class="overflow-hidden bg-gray-100 rounded-lg aspect-w-5 aspect-h-2">
          <img src="{{ item.image }}" alt="White canvas laptop sleeve with gray felt interior, silver zipper, and tan leather zipper pull." class="object-cover object-center" />
        </div>
      </div>
    </div>
    {%- endfor -%}
  </div>
</div>
