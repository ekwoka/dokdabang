<div class="flex">
    <div class="relative flex">
      
      <button type="button" class="relative z-10 flex items-center pt-px -mb-px text-sm font-medium transition-colors duration-200 ease-out border-b-2" aria-expanded="false" @click="selectedTab='{{ link.title | replace: ' ','-' }}'" :aria-expanded="selectedTab==='{{ link.title | replace: ' ','-' }}'" :class="selectedTab==='{{ link.title | replace: ' ','-' }}'?'border-emerald-600 text-emerald-600':'border-transparent text-gray-700 hover:text-gray-800'">
        {{ link.title | capitalize }}
      </button>
    </div>

    <div class="absolute inset-x-0 text-sm text-gray-500 top-full" x-show="selectedTab==='{{ link.title | replace: ' ','-' }}'" x-cloak
    x-transition:enter="transition ease-out duration-500"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-300"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0">
      <!-- Presentational element used to render the bottom shadow, if we put the shadow on the actual panel it pokes out the top, so we use this shorter element to hide the top of the shadow -->
      <div class="absolute inset-0 bg-white shadow top-1/2" aria-hidden="true"></div>

      <div class="relative bg-white">
        <div class="px-8 py-8 mx-auto max-w-7xl">
          <item-grid class="grid grid-cols-4 py-8 gap-y-10 gap-x-8">
            {%- for item in link.items -%}
            <nav-item class="relative group">
              <div class="overflow-hidden bg-gray-100 rounded-md aspect-w-1 aspect-h-1 group-hover:opacity-75">
                <img class="object-cover object-center" x-rias="'{{ item.img }}'" alt="{{ item.label }}">
              </div>
              <a href="{{ item.url }}" class="block mt-4 font-medium text-gray-900">
                <span class="absolute inset-0 z-10" aria-hidden="true"></span>
                {{ item.label | capitalize }}
              </a>
              <p aria-hidden="true" class="mt-1">Shop now</p>
            </nav-item>
            {%- endfor -%}

          </item-grid>
          <a class="flex items-center justify-center w-1/2 px-8 py-3 mx-auto text-base font-medium text-white border border-transparent rounded-md bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-50 focus:ring-emerald-500 disabled:bg-gray-700/50" href="{{ link.url }}">View More</a>
        </div>
      </div>
    </div>
  </div>